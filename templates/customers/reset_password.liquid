<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter">
      <div class="section-header reset_password_form">
        <div class="form-vertical account_box">
          {% form 'reset_customer_password' %}

            <h1 class="text-center ">{{ 'customer.reset_password.title' | t }}</h1>

            <p class="text-center sub_heading">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

            {%- if form.errors -%}
              <div class="form-message form-message--error">
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}
		   <div class="acut_input">
            <label class="hide_label" for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
            <input type="password" placeholder="password" value="" name="customer[password]" id="ResetPassword" class="input_style  {% if form.errors contains 'password' %} input--error{% endif %}">
          </div>
		 <div class="acut_input">
            <label class="hide_label" for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input type="password" placeholder="password confirm" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input_style  {% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
          </div>
          <div class="acut_input">
            <input type="submit" class="btn text-center cus_but_input" value="{{ 'customer.reset_password.submit' | t }}">
          </div>
          
          {% endform %}
        </div>

      </div>
    </div>
  </div>
</div>
