<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
<style>
  .bottom_section {
    background-color: {{product.metafields.product_color.product_color}} !important;
    position: relative;
  }
  #why_nyumi {
    margin-top: 0;
  }
  #why_nyumi h3.cm_title {
  	color: {{product.metafields.why_nyumi_titleColor.why_nyumi_titleColor}} !important;
  }
  #why_nyumi .icon_txts.white {
    color: black !important;
    background: white;
    padding: 1rem;
    border-radius: 22px;
    font-family: "Manrope";
    font-size: 21px;
    font-weight: 300;
    line-height: 13px;
    width: 85%;
    margin: 1rem auto;
  }
  #why_nyumi .icon_des {
   color: white !important;
  }
  .bottom_section.bst.icon-section2 {
    padding-bottom: 100px !important;
  }
  .three-icon_box .icon_img {
    margin-top: 2.5rem !important;
  }
  .swiper-pagination3 {
    display: block !important;
    position: absolute !important;
    bottom: 12% !important;
    left: 44% !important;
    width: 50% !important;
  }
  .swiper-pagination-bullet-active {
    background: white !important;
  }
  .swiper-slide.three.swiper-slide-prev{
    opacity: 1;
  }
  .swiper-pagination3 {
    display: none;
  }
</style>
<div class="bottom_section bst icon-section2  {{ product.handle }}" id="why_nyumi" style="display: block;">
  {% if section.settings.title != blank %}
  <h3 class="center white cm_title">
    {{ section.settings.title }}
  </h3>
  {% endif %}
  <div class="swiper3">
    <div class="swiper-pagination3"></div>
    <div class="swiper-wrapper three-icon_box">
      {% for block in section.blocks %}
        <div class="swiper-slide three" data-index="{{ forloop.index }}">
          {% if block.settings.block_title != blank %}
          <div class="icon_txts white">
            {{ block.settings.block_title }}
          </div>
          {% endif %}
          {% if block.settings.image != blank %}
          <div class="icon_img">
            <img class="res_width1 lazyload" data-src="{{ block.settings.image | img_url:"master" }}" alt="{{ block.settings.image.alt }}">
          </div>
          {% endif %}
          {% if block.settings.block_desc != blank %}
          <div class="icon_des">
            {{ block.settings.block_desc }}
          </div>
          {% endif %}
        </div>
      {% endfor %}      
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
  const swiper3 = new Swiper('.swiper3', {
    slidesPerView: 1,
    centeredSlides: false,
    centeredSlidesBounds: false,
    
    // Optional parameters
    direction: 'horizontal',
    loop: false,

    // If we need pagination
    pagination: {
      el: '.swiper-pagination3',
    },
    
    // Navigation arrows
    navigation: {
      nextEl: '.swiper-button-next3',
      prevEl: '.swiper-button-prev3',
    },
    breakpoints: {
    // when window width is >= 320px
    768: {
      slidesPerView: 3
    }
  }
  });
</script>

