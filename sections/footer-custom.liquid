<footer class="site-footer" role="contentinfo"   data-section-type="footer-section">
  <div class="footer1" id="footer1_section">
    <div class="three " id="address_box">
      <div class="footer_logo">
        {% if section.settings.footer_logo != blank %}
        <img class="lazyload" data-src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="{{ section.settings.footer_logo.alt }}"/>
        {% else %}
        <img src="//images.ctfassets.net/537ig19c198x/1DB2jm0SYlRpxPnHnwwEjX/6c8d053ffb9b79e0578521e0875d7110/footerlogo.png" alt="undefined">
        {% endif %}
      </div>
      {% if section.settings.address != blank %}
      <div class="desktop">
        {{section.settings.address}}
      </div>
      {% endif %}
      {% if section.settings.contact_info != blank %}
      <div class="desktop">
        <strong>
          <span class="nameset first1">{{section.settings.contact_info}}</span>
        </strong>
      </div>
      {% endif %}
    </div>
    <div class="three menu_footer">
      <div class="footer_menu_link">
        {% if section.settings.footer_left_menu != blank %}
        {% assign lt_ft = section.settings.footer_left_menu %}
        <ul class="footer_menu_ul" id="footer_menu_left">
          {% for link in linklists[lt_ft].links %}
          <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
        </ul>
        {% endif %}        
        {% if section.settings.footer_right_menu != blank %}
        {% assign rt_ft = section.settings.footer_right_menu %}
        <ul class="footer_menu_ul" id="footer_menu_right">
          {% for link in linklists[rt_ft].links %}
          <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
        </ul>
        {% endif %}        
      </div>
      <div class="mobile mobile_email">
        <strong>
          {% if section.settings.contact_info != blank %}
          <span class="nameset first1">
           {{ section.settings.contact_info }} 
          </span>
          {% endif %}
        </strong>
      </div>
      <div class="social_media mobile">
        <ul class="list--inline site-footer__social-icons social-icons site-footer__icon-list">          
          {% if settings.social_facebook_link != blank %}
          <li class="social-icons__item">
            <a class="social-icons__link" target="_blank" href="{{ settings.social_facebook_link }}">
              <img src="https://cdn.shopify.com/s/files/1/0412/3027/0631/files/Group_497_2x_de9f3124-6476-42b6-996f-572df3a74784.png" alt="facebook">
            </a>
          </li>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
          <li class="social-icons__item">
            <a class="social-icons__link" target="_blank" href="{{ settings.social_twitter_link }}">
              <img src="https://cdn.shopify.com/s/files/1/0412/3027/0631/files/Group_499_2x_630a780c-5da5-4bd2-ba13-e11aa1d3a928.png" alt="twitter">
            </a>
          </li>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
          <li class="social-icons__item">
            <a class="social-icons__link" target="_blank" href="{{ settings.social_instagram_link }}">
              <img src="https://cdn.shopify.com/s/files/1/0412/3027/0631/files/it.png?v=1606469610" alt="pistagram">
            </a>
          </li> 
          {% endif %}
        </ul>
      </div>
    </div>
    <div class="three last_footer">
      {% if section.settings.news_abv_title != blank %}
      <div class="numr_design">
      {{section.settings.news_abv_title}}
      </div>
      {% endif %}
      <div class="newslater_design">
        {% form 'customer', id: formId, novalidate: 'novalidate' %}
        {%- if form.posted_successfully? -%}
        <p class="form-message form-message--success" tabindex="-1" data-form-status>
          {{ 'general.newsletter_form.confirmation' | t }}
        </p>

        {%- endif -%}

        <script>
          jQuery(document).ready(function(){
            var url = window.location.href;
            if(url.indexOf('form_type=customer') != -1){

              $('.form-message--errors_footer').show();
            }
          });
        </script>
        {% if section.settings.news_title != blank %}
        <div class="form-message form-message--errors_footer">{{section.settings.news_title}}</div>
        {% endif %}
        <div class="form">
          <label>
            <input type="text" id="fname" name="contact[email]" placeholder="your e-mail">
            <input type="submit" value="subscribe >">	
          </label>
        </div>
        {% endform %}

      </div>
      <div class="social_media desktop">
        <ul class="list--inline site-footer__social-icons social-icons site-footer__icon-list">
          {% if settings.social_facebook_link != blank %}
          <li class="social-icons__item">
            <a class="social-icons__link" target="_blank" href="{{ settings.social_facebook_link }}">
              <img src="https://cdn.shopify.com/s/files/1/0412/3027/0631/files/Group_497_2x_de9f3124-6476-42b6-996f-572df3a74784.png" alt="facebook">
            </a>
          </li>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
          <li class="social-icons__item">
            <a class="social-icons__link" target="_blank" href="{{ settings.social_twitter_link }}">
              <img src="https://cdn.shopify.com/s/files/1/0412/3027/0631/files/Group_499_2x_630a780c-5da5-4bd2-ba13-e11aa1d3a928.png" alt="twitter">
            </a>
          </li>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
          <li class="social-icons__item">
            <a class="social-icons__link" target="_blank" href="{{ settings.social_instagram_link }}">
              <img src="https://cdn.shopify.com/s/files/1/0412/3027/0631/files/it.png?v=1606469610" alt="pistagram">
            </a>
          </li> 
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
  {% if template == 'index' %}
    <hr class="top-seo site-footer__hr">
    <div>
      {% render 'seo-footer-home' %}
    </div>
  {% endif %}
  {% if product.handle == 'happy-hair-nails-gummies' %}
    <hr class="top-seo site-footer__hr">
    <div>
      {% render 'seo-footer-hair' %}
    </div>
  {% endif %}
  {% if product.handle == 'radiant-skin-gummies' %}
    <hr class="top-seo site-footer__hr">
    <div>
      {% render 'seo-footer-skin' %}
    </div>
  {% endif %}
  {% if product.handle == 'beauty-sleep-gummies' %}
    <hr class="top-seo site-footer__hr">
    <div>
      {% render 'seo-footer-sleep' %}
    </div>
  {% endif %}
  {% if product.handle == 'rest-n-glow' %}
    <hr class="top-seo site-footer__hr">
    <div>
      {% render 'seo-footer-rest-n-glow' %}
    </div>
  {% endif %}
  {% if product.handle == 'hair-skin-gummies' %}
    <hr class="top-seo site-footer__hr">
    <div>
      {% render 'seo-footer-beauty-essentials' %}
    </div>
  {% endif %}
  <hr class="bottom-seo site-footer__hr">
  <div class="footer_2">
    <div class="half"> 
      {% if section.settings.footer_copyright_menu != blank %}
      {% assign cp_ft = section.settings.footer_copyright_menu %}
      <div id="footer_copy_right">
        {% for link in linklists[cp_ft].links %}
        <span class="nameset first1">
          <a href="{{link.url}}">{{link.title}}</a>
        </span>
        {% endfor %}        
      </div>
      {% endif %}
    </div>
    <div class="half">
      {% if section.settings.copyright != blank %}
      <div class="copyryt">
        {{section.settings.copyright}}
      </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
        {
          "type": "image_picker",
          "id": "footer_logo",
          "label": "Footer Logo"
        },
        {
          "type":"richtext",
          "id":"address",
          "label":"Address",
          "default":"<p>Ikaria Wellness Pvt Ltd, 412-B, The Capital, Bandra Kurla Complex, Mumbai 400 051, Maharashtra</p>"
        },
        {
          "type": "text",
          "id": "contact_info",
          "label": "Contact Information",
          "default": "hello@nyumi.com | +918291155181"
        },
        {
          "type":"link_list",
          "id":"footer_left_menu",
          "label":"Footer Left Menu"
        },
        {
          "type":"link_list",
          "id":"footer_right_menu",
          "label":"Footer Right Menu"
        },
        {
          "type":"link_list",
          "id":"footer_copyright_menu",
          "label":"Footer Copyright Menu"
        },
        {
          "type": "text",
          "id": "news_abv_title",
          "label": "Quote",
          "default": "100% updates. 0% junk."
        },
        {
          "type": "text",
          "id": "news_title",
          "label": "Newsletter Title",
          "default": "You are already a subscriber"
        },
        {
          "type":"richtext",
          "id":"copyright",
          "label":"Copyright",
          "default":"<p>Copyright Menu</p>"
        }
	]
  }
{% endschema %}

