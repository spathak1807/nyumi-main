        }
        .desktop-img {
          display: none;
        }
        .expert-close {
          padding: 1rem;
          font-size: 1.2rem;
        }
        .get-started {
          width: 90%;
          height: auto;
          margin: 1rem auto;
/*           padding-top: 1rem; */
        }
        .get-started .content {
          width: 60%;
          text-align: right;
          padding-right: 16px;
        }
        .doctor-img {
          width: 50%;
        }
        .get-started .content h2 {
          font-size: 17px;
          margin-bottom: 10px;
        }
        .get-started .content button {
          font-size: 12px;
          border: none;
