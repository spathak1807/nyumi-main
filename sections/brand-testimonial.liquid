<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
>

<style>
  .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet, .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
    margin: 0 3px !important;
  }
  .swiper-pagination-bullet {
    width: var(--swiper-pagination-bullet-width,var(--swiper-pagination-bullet-size,6px)) !important;
    height: var(--swiper-pagination-bullet-height,var(--swiper-pagination-bullet-size,6px)) !important;
  }
  .brand-card {
    text-align: center;
  }
  .brand-testimonials {
    background-color: #fff4ee;
    padding: 1rem 0;
  }
  .description-wrapper {
    padding: 10px;
    padding-bottom: 0;
  }
  .description-wrapper p {
    font-family: 'corbenr';
    font-size: 13px;
    font-weight: normal;
    font-style: normal;
    text-align: center;
    letter-spacing: 0.01px;
    color: #000000;
  }
  .swiper-slide[aria-label="1 / 3"] img {
    width: 90px;
    margin-bottom: 0;
  }
  .swiper-slide[aria-label="2 / 3"] img {
    width: 150px;
    margin-bottom: 0;
    margin-top: 1rem;
  }
  .swiper-slide[aria-label="3 / 3"] img {
    width: 90px;
    margin-bottom: 0;
  }
  .swiper-pagination {
    bottom: 0 !important;
  }
  .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet, .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
    background: #f37068;
  }
  .swiper .swiper-slide {
    opacity: 1;
  }
</style>
<div class="brand-testimonials mobile">
  <div class="page-width">
    <div class="swiper mobile">
      <div class="swiper-pagination"></div>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="brand-card">
              <div class="description-wrapper">
                <p>
                  {{ block.settings.description }}
                </p>
              </div>
              <img src="{{ block.settings.image | img_url: '300x' }}" alt="{{ block.settings.title }}">
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    const swiper = new Swiper('.swiper', {
    // Optional parameters
    direction: 'horizontal',
    loop: false,

    // If we need pagination
    pagination: {
      el: '.swiper-pagination',
    },


  });
</script>

{% schema %}
{
  "name": "Brand Testimonial",
   "blocks": [
  {
    "name": "Slide",
    "type": "slide",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Slide_image"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Slide_description"
      }
    ]
  }
],
"presets": [
  {
    "name": "Brand Testimonials",
    "settings": {}
  }
]
}
{% endschema %}

