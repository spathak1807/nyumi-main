<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
>
<style>
  @media(min-width: 768px) {
    .science-behind-section h3 {
          font-size: 30px !important;
    }
    .evidence-card {
      width: 30% !important;
          margin: 0 auto;
    }
  }
  .science-behind-section h3 {
    font-family: "Corbenr";
    font-size: 20px;
    font-weight: 400;
    line-height: 25px;
    font-style: normal;
    text-align: center;
    width: 53%;
    margin: 0 auto;
    color: white;
    margin-bottom: 1rem;
  }

  .science-behind-section {
    background-color: #F37068;
    padding-top: 1.75rem;
    padding-bottom: 1.75rem;
    text-align: center;
  }

  .study-year {
    color: #8dacb6;
    margin-bottom: 0.5rem;
  }

  .swiper3 .swiper-slide img {
  width:100% ;
  }

  .swiper3 .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet, .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
    background: #ffffff;
  }

  .evidence-card {
    background-color: white;
    text-align: left;
    padding: 10px 15px;
    position: relative;
    min-height: 270px;
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    width: 91%;
  }
  .evidence-card img {
        height: 100%;
  }
  .evidence-card a {
    position: absolute;
    bottom: 5%;
    text-decoration: underline;
  }

  .evidence-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 18px;
  }
 
</style>

<div class="science-behind-section">
  <h3>science behind happy hair gummies</h3>
  <div class="swiper3">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="evidence-card">
          <img
            src="{{ block.settings.image | img_url:'' }}"
            alt=""
          >
          <p class="study-year">Publish Year: {{ block.settings.study_year }} </p>
          <h4 class="evidence-title">{{ block.settings.title }}</h4>
          <p class="evidence-subtitle">{{ block.settings.description }}</p>

          <a href="{{ block.settings.btn_link }}">Evidence</a>
        </div>
      </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination3"></div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    const swiper3 = new Swiper('.swiper3', {
    // Optional parameters
    direction: 'horizontal',
    loop: false,

      slidesPerView: 1.25,
      spaceBetween: 10,
      centeredSlides: true ,

      // If we need pagination
  pagination: {
    el: '.swiper-pagination3',
  },


  });
</script>
{% schema %}
 {
  "name": "Science Behind",

  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide_image"
        },
        {
          "type": "text",
          "id": "study_year",
          "label": "Slide_year"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Slide_description"
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide_title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Behind",
      "settings": {}
    }
  ]
}
{% endschema %}

