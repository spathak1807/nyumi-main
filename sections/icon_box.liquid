{% for block in section.blocks %}
<!--- Line  --->
<div class="row backgd icboxes"   {% if block.settings.image != blank %}
       style="background-image: url({{ 'Circle.svg' | asset_url }})"
       {% endif %}>
<div class="eqpd">  
  <div class="center">
  <div class="sml_tag">{{ block.settings.heading}}</div>
  <div class="cm_title">{{ block.settings.para}}</div>
    <div class="cm_p">{{ block.settings.subtext}}</div>
    
      
    <div class="cm_but"><a class="button" href="#">know more</a></div>
    
    <div class="slider_title">only good choices. no compromises.</div>
      <div class="row icon_boxes">
        {% if block.settings.ig1 != blank %}
        <div class="boxes">
          <div class="icon_img">
            <img class="res_width1" src="{{ 'Vegan.svg' | asset_url }}" alt="image">             
          </div>
          <div class="icon_cont">
            <h3 class="icontextset">{{ block.settings.it1}}</h3>
          </div>  
        </div>
        {% endif %}
         {% if block.settings.ig2 != blank %}
        <div class="boxes">
          <div class="icon_img">
            <img class="res_width1" src="{{ 'Gluten_Allergen_Free.svg' | asset_url }}" alt="image">             
          </div>
          <div class="icon_cont">
            <h3 class="icontextset">{{ block.settings.it2}}</h3>
          </div>  
        </div>
        {% endif %}
         {% if block.settings.ig3 != blank %}
        <div class="boxes">
          <div class="icon_img">
            <img class="res_width1" src="{{ 'Low_Sugar.svg' | asset_url }}" alt="image">             
          </div>
          <div class="icon_cont">
            <h3 class="icontextset">{{ block.settings.it3}}</h3>
          </div>  
        </div>
        {% endif %}
         {% if block.settings.ig4 != blank %}
        <div class="boxes">
          <div class="icon_img">
            <img class="res_width1" src="{{ 'No_Colour.svg' | asset_url }}" alt="image">             
          </div>
          <div class="icon_cont">
            <h3 class="icontextset">{{ block.settings.it4}}</h3>
          </div>  
        </div>
        {% endif %}
        
        {% comment %}
         {% if block.settings.ig5 != blank %}
        <div class="boxes">
          <div class="icon_img">
            <img class="res_width1" src="{{ block.settings.ig5 | img_url: 'master' }}" alt="image">             
          </div>
          <div class="icon_cont">
            <h3 class="icontextset">{{ block.settings.it5}}</h3>
          </div>  
        </div>
        {% endif %}
         {% if block.settings.ig6 != blank %}
        <div class="boxes">
          <div class="icon_img">
            <img class="res_width1" src="{{ block.settings.ig6 | img_url: 'master' }}" alt="image">             
          </div>
          <div class="icon_cont">
            <h3 class="icontextset">{{ block.settings.it6}}</h3>
          </div>  
        </div>
        {% endif %}
        {% endcomment %}
        
        
      </div>  
  </div>
  
</div>
  
</div>

{% endfor %}

