<div class="page-width" id="featured_Journal">
  {% if section.settings.title != blank %}
    <header class="section-header text-center">
      <p class="sml_tag">{{ section.settings.title | escape }}</p>
    </header>
  {% endif %}
{%- assign blog = blogs[section.settings.blog] -%}

 <ul class="grid grid--uniform grid--blog " id="blog_home">
 {%- assign sortedArticles = blog.articles | sort: 'updated_at' | reverse -%}
{%- for article in sortedArticles limit: section.settings.post_limit -%}

     
  <li class="grid__item medium-up--one-third blog_home" tag="{{ article.tags }}">
    <article>
      <header>
        <a href="{{ article.url }}" class="article__link">
          <div class="article__grid-image-wrapper">
            <img class="article__grid-image_new lazyload" data-src="{{ article.image | img_url: '500x500' }}" alt="{{ article.image.alt }}" loading="lazy">
          </div>
        </a> 
        {% if article.title != blank %}
        <h4 class="article__title">
          <a href="{{ article.url }}">{{ article.title }}</a> 
        </h4>
        {% endif %}
        {% if article.excerpt != blank %}
        <div class="rte article__grid-excerpt">{{ article.excerpt }}</div>
        
        {% endif %}
      </header>
    </article>
   </li>
   {% endfor %}
  </ul>
</div>

<script>
  $('.blog_home').each(function(i, obj) {
    if($(obj)[0].attributes['tag'].value.toLowerCase().includes("hidden")) {
      $(obj).remove()
    }
});
</script>

