{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --color-overlay-opacity: {{ section.settings.colors_overlay_opacity | divided_by: 100.0 }};
    --color-overlay: {{ section.settings.colors_overlay.red }}, {{ section.settings.colors_overlay.green }}, {{ section.settings.colors_overlay.blue }};
    --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-link: var(--color-foreground);
    --color-border: var(--color-foreground);
    --color-heading: var(--color-foreground);
    --color-button-background: {{ section.settings.colors_button_background.red }}, {{ section.settings.colors_button_background.green }}, {{ section.settings.colors_button_background.blue }};
    --color-button-text: {{ section.settings.colors_button_label.red }}, {{ section.settings.colors_button_label.green }}, {{ section.settings.colors_button_label.blue }};
    --color-button-border: var(--color-button-background);
    --color-shadow: var(--color-foreground);
    --shadow-opacity: 0.3;
  }
  <style>
    .banner__media {
      display: block;
    }
    .banner__media.mobile {
      display: none;
    }
  @media(max-width: 768px) {
    .banner__media {
      display: none;
    }
    .banner__media.mobile {
      display: block;
    }
  }

  .button--desktop {
     position: absolute;
  bottom: 10%;
  right: 10%;
/*     background: transparent !important;
    color: #f47169 !important;
    border: 2px solid #f47169 !important; */
  }
  .button--mobile {
     position: absolute;
  bottom: 10%;
  left: 50%;
    transform: translateX(-50%);
/*     background: transparent !important;
    color: #f47169 !important;
    border: 2px solid #f47169 !important; */
  }

  .banner__media , mobile {
    position:relative;
  }
  </style>
{%- endstyle -%}


<!--   <div class="page-width{% if section.settings.full_width %} page-width--full-width{% endif %}"> -->
    <div id="Banner-{{ section.id }}" class="banner{% if section.settings.show_text_box %} banner--container{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}">
      <div class="banner__media">
        {{ section.settings.video_upload | media_tag: controls: false, height: "100%", autoplay: true, width: "100%", loop: true }}
        <a href="{{ section.settings.button_link }}" class="button button--desktop">{{ section.settings.button_label }}</a>
      </div>
      <div class="banner__media mobile">
        {{ section.settings.video_upload_mob | media_tag: controls: false, height: "100%", autoplay: true, width: "100%", loop: true }}
        <a href="{{ section.settings.button_link }}" class="button button--mobile">{{ section.settings.button_label }}</a>
      </div>
    </div>
<!--   </div> -->



{% schema %}
{
  "name": "video-hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "video",
      "id": "video_upload",
      "label": "Upload Video",
      "info": "Width-Height (1440X600)"
    },
    {
      "type": "video",
      "id": "video_upload_mob",
      "label": "Upload Video Mobile",
      "info": "Width-Height-Mobile (470X400)"
    } ,
    {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "button_label",
          "info": "button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "button_link"
        }
  ],
  "presets": [
    {
      "name": "video-hero",
      "settings": {
        "video_upload": "",
        "video_upload_mob": ""
      }
    }
  ]
}
{% endschema %}