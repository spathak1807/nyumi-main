}

  .benefit-title {
        font-family: "Corben";
    font-size: 24px;
    font-weight: normal;
    line-height: 0px;
    font-style: normal;
    text-align: center;
    color: #000000;
}
  }

  .pd_icon_section {
    background-color: white;
  }
  .product-price {
